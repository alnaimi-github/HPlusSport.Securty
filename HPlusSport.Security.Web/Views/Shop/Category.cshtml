@model HPlusSport.Security.Web.Models.Category

@{
    ViewData["Title"] = "Category";
}

<header class="woocommerce-products-header">
    <h1 class="woocommerce-products-header__title page-title">@Model.Name</h1>
</header>

<div class="storefront-sorting"><div class="woocommerce-notices-wrapper"></div></div>
<ul class="products columns-4">
    @foreach (var product in Model.Products)
    {
        <li class="product-category product">
            <h2 class="woocommerce-loop-category__title">
                @product.Name (@(product.IsAvailable ? @product.Price.ToString("0.00") : "unavailable"))
                @if (product.IsAvailable) {
                    using (Html.BeginForm("AddToCart", "Shop", new { id = product.Id }, FormMethod.Post))
                    {
                    <input type="submit" value="Add to cart" />
                    }
                }
            </h2>
        </li>
    }
</ul>
